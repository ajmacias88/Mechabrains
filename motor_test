Motor test: #define MR_1 13
#define MR_2 12
#define MR_PWM 11


#define ML_1 8
#define ML_2 9
#define ML_PWM 10




void setup() {
 // put your setup code here, to run once:
 pinMode(MR_1, OUTPUT);
 pinMode(MR_2, OUTPUT);
 pinMode(ML_PWM, OUTPUT);
 pinMode(ML_1, OUTPUT);
 pinMode(ML_2, OUTPUT);
 pinMode(MR_PWM, OUTPUT);


 analogWrite(MR_PWM, 210);
 analogWrite(ML_PWM, 210);
 digitalWrite(MR_1, 0);
 digitalWrite(MR_2, 1);
 digitalWrite(ML_1, 0);
 digitalWrite(ML_2, 1);
}


void loop() {
  if ((analogRead(IR1) < 400) & (analogRead(IR2) < 400) & (analogRead(IR3) < 400) & (analogRead(IR4) < 400)){
    digitalWrite(MR_1, HIGH);
    digitalWrite(MR_2, LOW);
    digitalWrite(ML_1, HIGH);
    digitalWrite(ML_2, LOW);
    Serial.println("stopped");
  }
}



}
